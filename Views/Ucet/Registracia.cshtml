@model RegistraciaViewModel

<h2>Registrace</h2>
<hr />
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Ucet" asp-action="Registracia" method="post">
	<div class="form-group">
		<label asp-for="Meno"></label>
		<input asp-for="Meno" class="form-control" />
		<span asp-validation-for="Meno" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Email"></label>
		<input asp-for="Email" class="form-control"/>
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Heslo"></label>
		<input asp-for="Heslo" type="password" class="form-control"/>
		<span asp-validation-for="Heslo" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="PotvrdenieHesla"></label>
		<input asp-for="PotvrdenieHesla" type="password" class="form-control"/>
		<span asp-validation-for="PotvrdenieHesla" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">registrovať sa</button>
</form>