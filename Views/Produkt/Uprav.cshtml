@model Produkt

<form asp-controller="Produkt" asp-action="Uprav" method="post">

	<div class="form-group">
		<label asp-for="Typ"></label>
		<input asp-for="Typ" class="form-control" />
		<span asp-validation-for="Typ" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Opis"></label>
		<input asp-for="Opis" class="form-control" />
		<span asp-validation-for="Opis" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Obrazok"></label>
		<input asp-for="Obrazok" class="form-control" />
		<span asp-validation-for="Obrazok" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="MaterialID"></label>
		<input asp-for="MaterialID" class="form-control" />
		<span asp-validation-for="MaterialID" class="text-danger"></span>
	</div>


	<button id="btnUpravitProdukt" type="submit" class="btn btn-primary">Upravit dáta</button>
</form>

<script>
	document.getElementById('btnUpravitProdukt').addEventListener('click', function () {
		var confirmation = confirm('Naozaj chcete upravit produkt?');
		if (confirmation) {
			var xmlRequest = new XMLHttpRequest();
			xmlRequest.open('POST', '/Produkt/Uprav', true);
			xmlRequest.setRequestHeader('Content-Type', 'application/json');

			xmlRequest.onload = function () {
				if (xmlRequest.status === 200) {
					alert('Produkt bol úspešne upravený.');
				} else {
					alert('Chyba pri úprave produktu: ' + xmlRequest.responseText);
				}
			};

			xmlRequest.send();
		}
	});
</script>