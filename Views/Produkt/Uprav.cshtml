@model Produkt

<form asp-controller="Produkt" asp-action="Uprav" method="post" role="form">

	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Typ" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Typ" class="form-control" placeholder=@Model.Typ />
			<span asp-validation-for="Typ" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="Opis" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Opis" class="form-control" placeholder=@Model.Opis />
			<span asp-validation-for="Opis" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="MaterialID" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="MaterialID" class="form-control" placeholder=@Model.MaterialID />
			<span asp-validation-for="MaterialID" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<input asp-for="Obrazok" type="file" class="form-control" placeholder=@Model.Obrazok/>
			<span asp-validation-for="Obrazok" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-2">
			<button type="submit" class="btn btn-success form-control">Uprav</button>
		</div>
	</div>

</form>