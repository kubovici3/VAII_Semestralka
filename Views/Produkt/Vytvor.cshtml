@model Produkt
@{
	List<Plosny_material> materialy = Model.Plosne_materialy.ToList();

}

<form asp-controller="Produkt" asp-action="Vytvor" method="post" role="form">
	<div class="form-group">
		<label asp-for="Typ" class="col-md-2"></label>
		<select name="Typ" asp-for="Typ" class="col-md-2">

			<option value="@TypProduktu.Kuchyna">Kuchyna</option>
			<option value="@TypProduktu.Pracovna">Pracovna</option>
			<option value="@TypProduktu.Obyvacia_izba">Obyvacia izba</option>

			
		</select>
	</div>
	<div class="form-group">
		<label asp-for="Opis" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Opis" class="form-control" />
			<span asp-validation-for="Opis" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="Plosne_materialy" class="col-md-2"></label>	
		<select name="Plosne_materialy" asp-for="Plosne_materialy" class="col-md-2">

			<option value="@materialy[0]">1</option>
			<option value="@materialy[1]">2</option>
			<option value="@materialy[2]">3</option>
			<option value="@materialy[3]">4</option>
			<option value="@materialy[4]">5</option>
			<option value="@materialy[5]">6</option>

		</select>

	</div>
	<div class="form-group">
		<div class="col-md-10">
			<input asp-for="Obrazok" type="file" class="form-control" />
			<span asp-validation-for="Obrazok" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<input type="hidden" asp-for="UdajeProduktu.CasVytvorenia" value="@DateTime.Now" />
			<span asp-validation-for="UdajeProduktu.CasVytvorenia" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<input type="hidden" asp-for="UdajeProduktu.CasPoslednejZmeny" value="@DateTime.Now" />
			<span asp-validation-for="UdajeProduktu.CasPoslednejZmeny" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-2">
			<button href="Produkty" type="submit" class="btn btn-success form-control">Vytvor</button>
		</div>
	</div>

</form>