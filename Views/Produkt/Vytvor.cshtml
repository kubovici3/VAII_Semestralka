@model Produkt
@{

}

<form asp-controller="Produkt" asp-action="Vytvor" method="post" role="form">
	<div class="form-group">
		<label asp-for="Typ" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Typ" class="form-control" />
			<span asp-validation-for="Typ" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="Opis" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Opis" class="form-control" />
			<span asp-validation-for="Opis" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<label asp-for="MaterialID" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="MaterialID" class="form-control" />
			<span asp-validation-for="MaterialID" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<input asp-for="Obrazok" type="file" class="form-control" />
			<span asp-validation-for="Obrazok" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<input type="hidden" asp-for="UdajeProduktu.CasVytvorenia" value="@DateTime.Now" />
			<span asp-validation-for="UdajeProduktu.CasVytvorenia" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-10">
			<input type="hidden" asp-for="UdajeProduktu.CasPoslednejZmeny" value="@DateTime.Now" />
			<span asp-validation-for="UdajeProduktu.CasPoslednejZmeny" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-2">
			<button href="Produkty" type="submit" class="btn btn-success form-control">Vytvor</button>
		</div>
	</div>

</form>